def add_persons(full_name, age, profession, settlers):
    settlers[full_name] = [age, profession]
    print("добавили нового жителя", full_name, "профессия", profession, "возраст", age)
    return settlers

def list_professions(people_dict):
    prof_set = set()
    for k, v in people_dict.items():
        prof_set.add(v[1])
    return prof_set

def main_func():
    print("запускаем бота")
    settlers = {}
    add_persons("Саша","18","horny", settlers)
    working = True
    while working:
        main_menu = '''
        Какой будет у вас выбор, Чумба?
        1 - сколько жителей
        2 - добавить жителя
        3 - список профессий
        q - выход из программы
        '''
        user_choice = input(main_menu)

        if user_choice == "1":
            print(settlers)

        elif user_choice == "2":
            full_name = input("Введите имя и фамилию")
            age = input("Введите возраст")
            profession = input("Введите профессию")
            settlers = add_persons(full_name, age, profession, settlers)


        elif user_choice == "3":
            print("Список профессий:", list_professions(settlers))

main_func()
